{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "ignorePatterns": ["/node_modules/*"],
  "rules": {
    "strict": ["error", "never"],
    "camelcase": "error",
    "no-unexpected-multiline": "error",
    "no-unsafe-negation": "error",
    "no-undef": "error",
    "no-unused-vars": "warn",
    "react/prop-types": 0
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "pragma": "h",
      "version": "latest"
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
